server {
	listen 80;
	client_max_body_size 10m;
	server_name brand-sales.net www.brand-sales.net;
	error_log /srv/www/brand-sales.net/logs/error.log;
	root   /srv/www/brand-sales.net/public_html;

	error_page 404 = @foobar;

	location @foobar {
	    rewrite  .*  / permanent;
	}
	
	location / {
		index  index.html index.htm index.php;
		location ~ \.php$ {
			# Setup var defaults
			set $no_cache "";
			# If non GET/HEAD, don't cache & mark user as uncacheable for 1 second via cookie
			if ($request_method !~ ^(GET|HEAD)$) {
				set $no_cache "1";
			}
			# Drop no cache cookie if need be
			# (for some reason, add_header fails if included in prior if-block)
			if ($no_cache = "1") {
				add_header Set-Cookie "_mcnc=1; Max-Age=2; Path=/";
				add_header X-Microcachable "0";
			}
			# Bypass cache if no-cache cookie is set
			if ($http_cookie ~* "_mcnc") {
				set $no_cache "1";
			}

			fastcgi_no_cache $no_cache;
			fastcgi_cache_bypass $no_cache;
			fastcgi_cache microcache;
			fastcgi_cache_key $scheme$host$request_uri$request_method;
			fastcgi_cache_valid 200 301 302 1m;
			fastcgi_cache_use_stale updating error timeout invalid_header http_500;
			fastcgi_pass_header Set-Cookie;
			fastcgi_pass_header Cookie;
			fastcgi_ignore_headers Cache-Control Expires Set-Cookie;

			
			try_files $uri =404;
			fastcgi_pass unix:/var/lib/php5-fpm/www.sock;
			fastcgi_index index.php;

			fastcgi_buffer_size 128k;
			fastcgi_buffers 256 16k;
			fastcgi_busy_buffers_size 256k;
			fastcgi_temp_file_write_size 256k;
			fastcgi_read_timeout 240;
			fastcgi_intercept_errors on;

			fastcgi_param SCRIPT_FILENAME /srv/www/brand-sales.net/public_html$fastcgi_script_name;
			include	fastcgi_params;
		}
	}

	location ^~ /admin {
		index  index.html index.htm index.php;
		auth_basic            "haytni Admin Panel";
		auth_basic_user_file  /srv/www/brand-sales.net/public_html/admin/.htpasswd;
		location ~ \.php$ {
			try_files $uri =404;
			fastcgi_pass unix:/var/lib/php5-fpm/www.sock;
			fastcgi_index index.php;

			fastcgi_buffer_size 128k;
			fastcgi_buffers 256 16k;
			fastcgi_busy_buffers_size 256k;
			fastcgi_temp_file_write_size 256k;
			fastcgi_read_timeout 240;
			fastcgi_intercept_errors on;

			fastcgi_param SCRIPT_FILENAME /srv/www/brand-sales.net/public_html$fastcgi_script_name;
			include	fastcgi_params;
		}
	}

	location ^~ /timthumb.php {
        valid_referers none blocked www.brand-sales.net brand-sales.net;
        if ($invalid_referer) {
            return   403;
        }
        expires 30d;
        log_not_found off;
        access_log off;

		# Setup var defaults
		set $no_cache "";
		# If non GET/HEAD, don't cache & mark user as uncacheable for 1 second via cookie
		if ($request_method !~ ^(GET|HEAD)$) {
			set $no_cache "1";
		}
		# Drop no cache cookie if need be
		# (for some reason, add_header fails if included in prior if-block)
		if ($no_cache = "1") {
			add_header Set-Cookie "_mcnc=1; Max-Age=2; Path=/";
			add_header X-Microcachable "0";
		}
		# Bypass cache if no-cache cookie is set
		if ($http_cookie ~* "_mcnc") {
			set $no_cache "1";
		}
		
		# Bypass cache if flag is set
		fastcgi_no_cache $no_cache;
		fastcgi_cache_bypass $no_cache;
		fastcgi_cache imagecache;
		fastcgi_cache_key $scheme$host$request_uri$request_method;
		fastcgi_cache_valid 200 301 302 60d;
		fastcgi_cache_use_stale updating error timeout invalid_header http_500;
		fastcgi_pass_header Set-Cookie;
		fastcgi_pass_header Cookie;
		fastcgi_ignore_headers Cache-Control Expires Set-Cookie;

	
	
	
		try_files $uri =404;
		fastcgi_pass unix:/var/lib/php5-fpm/www.sock;
		fastcgi_index index.php;

		fastcgi_buffer_size 128k;
		fastcgi_buffers 256 16k;
		fastcgi_busy_buffers_size 256k;
		fastcgi_temp_file_write_size 256k;
		fastcgi_read_timeout 240;
		fastcgi_intercept_errors on;

		fastcgi_param SCRIPT_FILENAME /srv/www/brand-sales.net/public_html$fastcgi_script_name;
		include	fastcgi_params;		
	}

	location ~* ^.+\.(jpg|jpeg|gif|png|ico|css|zip|tgz|gz|js)$ {
		expires 30d;
		log_not_found off;
		access_log off;
	}

	location ~* ^.+\.(html)$ {

	}
	
	location ~ /\.ht {
		deny all;
	}

}
